ENV_CFG="-Dspring.profiles.active={{ profile }}"
JVM_CFG="-Xms1024m -Xmx1024m -XX:PermSize=128m -XX:MaxPermSize=512m -Dfile.encoding=UTF-8"
DEBUG_CFG="-XX:-HeapDumpOnOutOfMemoryError -XX:HeapDumpPath={{ inera_tomcat_folder }}"
CREDENTIALS_CFG="-Dcredentials.file={{ etc_folder }}/credentials.properties"
WEBCERT_CFG="-Dwebcert.config.file={{ etc_folder }}/webcert.properties -Dwebcert.logback.file={{ etc_folder }}/webcert-logback.xml"
LOGSENDER_CFG="-Dlogsender.config.file={{ etc_folder }}/logsender.properties -Dlogsender.logback.file={{ etc_folder }}/logsender-logback.xml"
NOTIFICATIONSENDER_CFG="-Dnotification-sender.config.file={{ etc_folder }}/notificationsender.properties -Dnotification-sender.logback.file={{ etc_folder }}/notificationsender-logback.xml"
export JAVA_OPTS="$JAVA_OPTS $ENV_CFG $JVM_CFG $DEBUG_CFG $CREDENTIALS_CFG $WEBCERT_CFG $LOGSENDER_CFG $NOTIFICATIONSENDER_CFG"
