<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:aop="http://www.springframework.org/schema/aop" xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd  http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
    profile="dev,wc-all-stubs,wc-mail-stub">

  <context:component-scan base-package="se.inera.intyg.webcert.mailstub" />

  <aop:aspectj-autoproxy/>
  <bean id="mailAdvice" class="se.inera.intyg.webcert.mailstub.JavaMailSenderAroundAdvice">
      <property name="mailHost" value="${mail.host}"/>
  </bean>
</beans>
