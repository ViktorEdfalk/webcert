<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0">

  <display-name>Notification Sender Web Application</display-name>

  <!-- System property that points to the Logback configuration file to use -->
  <context-param>
    <param-name>logbackConfigParameter</param-name>
    <param-value>notification-sender.logback.file</param-value>
  </context-param>

  <!-- Spring config file -->
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:/notification-sender-config.xml</param-value>
  </context-param>

  <!-- Listener for external logback configuration file -->
  <listener>
    <listener-class>se.inera.certificate.logging.LogbackConfiguratorContextListener</listener-class>
  </listener>

  <!-- Start spring context -->
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>

  <!-- Servlet for CXF services -->
  <servlet>
    <servlet-name>services</servlet-name>
    <servlet-class>org.apache.cxf.transport.servlet.CXFServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>services</servlet-name>
    <url-pattern>/services/*</url-pattern>
  </servlet-mapping>

  <!-- JDBC data source -->
  <resource-ref>
    <res-ref-name>jdbc/webcert</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

  <!-- JMS resources -->
  <resource-ref>
    <res-ref-name>jms/ConnectionFactory</res-ref-name>
    <res-type>javax.jms.ConnectionFactory</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

  <resource-ref>
    <res-ref-name>jms/NotificationQueue</res-ref-name>
    <res-type>javax.jms.Queue</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

</web-app>