<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:camel="http://camel.apache.org/schema/spring"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
  
  <bean id="processNotificationRequestRouteBuilder" class="se.inera.webcert.notifications.routes.ProcessNotificationRequestRouteBuilder" />
  
  <bean id="notificationRequestRouter" class="se.inera.webcert.notifications.routes.NotificationRequestRouter" />
     
  <camel:camelContext id="webcertNotification">
    
    <camel:routeBuilder ref="processNotificationRequestRouteBuilder"/>
    
    <camel:routeBuilder ref="notificationRequestRouter"/>
    
    <!-- Endpoint connected to AMQ to recieve messages on -->    
    <camel:endpoint id="receiveNotificationRequestEndpoint" uri="${receiveNotificationRequestEndpointUri}"/>
    
    <!-- Outgoing endpoint to CertificateStatusUpdateForCare service -->
    <camel:endpoint id="sendCertificateStatusUpdateEndpoint" uri="${sendCertificateStatusUpdateEndpointUri}"/>
    
    <!-- Endpoint for retrieving an Intyg entity from repository -->
    <camel:endpoint id="getIntygFromWebcertRepositoryServiceEndpoint" uri="${getIntygFromWebcertRepositoryServiceEndpointUri}"/>
    
    <!-- Endpoint pointing to the processNotificationRequest route -->
    <camel:endpoint id="processNotificationRequestEndpoint" uri="${processNotificationRequestEndpointUri}"/>
    
    <camel:dataFormats>
      <camel:jaxb id="notificationRequestJaxb" contextPath="se.inera.webcert.notifications.message.v1"/>
    </camel:dataFormats>
    
  </camel:camelContext>
  
</beans>