<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    
  <beans profile="test,qa,prod">
    <!-- Credentials file must be present in test, qa and prod -->
    <context:property-placeholder location="file:${credentials.file}"
      order="1" ignore-resource-not-found="false" />
  </beans>

  <beans>
    <context:property-placeholder
      location="classpath:default.properties, classpath:webcert-notification-route-params.properties, file:${notification-sender.config.file}"
      order="2" ignore-resource-not-found="false" />
  </beans>
</beans>
